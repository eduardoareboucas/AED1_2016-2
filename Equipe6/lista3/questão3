#include <stdio.h>

int main()
{
FILE *teste;
int idade=10;
char nome[6]="macro";

if((teste = fopen("info.txt","w+")) == NULL)
{
printf("\nErro ao abrir arquivo");
return 1; /* informar ao shell que o programa terminou com erro :D */
}
else
{
fprintf(teste,"%d%s",idade,nome);
fclose(teste); /* fclose est√° condicionado apenas ao caso do arquivo ter sido mesmo aberto */
}
return 0;
}


